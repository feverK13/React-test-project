{
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 100,
  "arrowParens": "avoid",
  "cssDeclarationSorterOrder": "concentric-css",
  "endOfLine": "lf",
  "quoteProps": "as-needed",

  "plugins": ["prettier-plugin-css-order", "@trivago/prettier-plugin-sort-imports"],
  "importOrder": ["^react", "^[a-zA-Z]", "^@/", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
